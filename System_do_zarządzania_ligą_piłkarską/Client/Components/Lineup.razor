@using System_do_zarządzania_ligą_piłkarską.Shared.DTOs

<div class="table-responsive">
    <table class="table table-bordered table-striped table-hover">
        <thead class="table-success">
            <tr>
                <th>Imię</th>
                <th>Nazwisko</th>
                <th>Numer</th>
                <th>Narodowość</th>
                <th>Wzrost</th>
                <th>Waga</th>
                <th>Rozegrane mecze</th>
                <th>Gole</th>
                <th>Asysty</th>
                <th>Gole samobójcze</th>
                <th>Żółte kartki</th>
                <th>Czerwone kartki</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var footballer in players)
            {
                <tr>
                    <td>@footballer.Footballer.FirstName</td>
                    <td>@footballer.Footballer.LastName</td>
                    <td>@footballer.Footballer.ShirtNumber</td>
                    <td>@footballer.Footballer.Nationality</td>
                    <td>@footballer.Footballer.Height</td>
                    <td>@footballer.Footballer.Weight</td>
                    <td>@footballer.MatchesPlayed</td>
                    <td>@footballer.Goals</td>
                    <td>@footballer.Assists</td>
                    <td>@footballer.OwnGoals</td>
                    <td>@footballer.YellowCards</td>
                    <td>@footballer.RedCards</td>
                </tr>
            }
        </tbody>
    </table>
</div>

@code {
    [Parameter]
    public List<FootballerStatDTO> players { get; set; }
}