<div class="modal fade show" tabindex="-1" role="dialog" style="display: block; background-color: rgba(0, 0, 0, 0.5);" aria-modal="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Title</h5>
                <button type="button" class="close" aria-label="Close" @onclick="CancelAsync">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @Body
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" @onclick="ConfirmAsync">Tak</button>
                <button type="button" class="btn btn-secondary" @onclick="CancelAsync">Anuluj</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Title { get; set; } = "Potwierdzenie";

    [Parameter]
    public string? Body { get; set; }

    [Parameter]
    public EventCallback<bool> OnConfirm { get; set; }

    [Parameter]
    public EventCallback OnCancel { get; set; }

    private async Task ConfirmAsync()
    {
        await OnConfirm.InvokeAsync(true);
    }

    private async Task CancelAsync()
    {
        await OnCancel.InvokeAsync();
    }
}