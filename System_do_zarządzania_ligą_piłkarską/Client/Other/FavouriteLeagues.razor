@* body {
    font-family: 'Roboto', sans-serif;
    background: #f4f7f6;
    padding: 20px;
}

.league-table-container {
    margin: 20px auto;
    max-width: 1200px;
    padding: 20px;
    background: linear-gradient(145deg, #ffffff, #e6e6e6);
    border-radius: 25px;
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
}

.table-title {
    text-align: center;
    font-size: 2em;
    color: #333;
    margin-bottom: 20px;
    text-transform: uppercase;
    letter-spacing: 2px;
}

.league-table {
    width: 100%;
    border-collapse: collapse;
    background-color: #ffffff;
    border-radius: 15px;
    overflow: hidden;
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
}

    .league-table thead {
        background: linear-gradient(90deg, #007bff, #00c6ff);
        color: #ffffff;
        text-align: left;
        font-size: 1.2em;
    }

        .league-table thead th {
            padding: 15px;
            position: relative;
            border-bottom: 2px solid #f0f0f0;
        }

            .league-table thead th:first-child {
                border-top-left-radius: 15px;
            }

            .league-table thead th:last-child {
                border-top-right-radius: 15px;
            }

    .league-table th,
    .league-table td {
        padding: 15px 20px;
        text-align: left;
        vertical-align: middle;
    }

    .league-table tbody tr {
        border-bottom: 1px solid #f0f0f0;
        transition: background-color 0.3s ease;
    }

        .league-table tbody tr:hover {
            background-color: #f1f1f1;
        }

        .league-table tbody tr:last-child {
            border-bottom: none;
        }

        .league-table tbody tr:nth-of-type(odd) {
            background-color: #fafafa;
        }

        .league-table tbody tr:nth-of-type(even) {
            background-color: #f9f9f9;
        }

        .league-table tbody tr td:first-child {
            font-weight: bold;
            color: #007bff;
            text-align: center;
        }

.ranking {
    font-size: 1.5em;
    color: #007bff;
    font-weight: bold;
}

.player-name {
    display: flex;
    align-items: center;
}

.player-photo {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    margin-right: 10px;
    object-fit: cover;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

.team-name {
    color: #555;
    font-weight: 600;
    text-transform: uppercase;
}

.flag-icon {
    width: 24px;
    height: auto;
    margin-right: 10px;
    vertical-align: middle;
    border-radius: 3px;
    box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
}

.league-table td {
    font-size: 1.1em;
    position: relative;
    z-index: 1;
}

    .league-table td:before {
        content: '';
        position: absolute;
        top: 50%;
        left: 0;
        width: 5px;
        height: 100%;
        background-color: #007bff;
        transform: translateY(-50%);
        transition: width 0.3s ease;
        z-index: 0;
        border-radius: 0 10px 10px 0;
    }

.league-table tbody tr:hover td:before {
    width: 100%;
}

.league-table tbody tr:hover td {
    color: #fff;
    z-index: 2;
}

.league-table tbody tr:hover .team-name {
    color: #fff;
}


